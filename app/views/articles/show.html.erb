<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @article.title %></h1>
      <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_article_path %>
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure you want to delete?"} %>
      <hr>
      <p><%= @article.content %></p>
    </div>
  </div>
</div>
